{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "target": "ES2020",
    "outDir": "../dist",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
